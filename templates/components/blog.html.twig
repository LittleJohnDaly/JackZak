{% for blog in blogs %}
    <div class="container px-4 px-lg-5 ">
        <div class="row gx-4 gx-lg-5 align-items-center justify-content-center my-5">
            <div class="col-lg-8">
                <div id="blog_{{ blog.id }}" class="card mb-4">
                        <img class="img-fluid rounded mb-4 mb-lg-0 w-100" src="{{ asset('img/blog/' ~ blog.img) }}" alt="{{ blog.alt }}">
                    <div class="card-body">
                        <div class="small text-muted">
                            {{ blog.createdAt|date('d/m/y') }}
                        </div>
                        <h2 class="card-title">{{ blog.title }}</h2>
                        {% if app.request.attributes.get('_route') == 'blogs' %}
                            <p class="card-text">{{ blog.description }}</p>
                           {% else %}
                               <p class="card-text">{{ blog.abstract }}</p>
                               <a class="btn btn-primary" href="{{ path('blogs')}}#blog_{{ blog.id }}">Voir tous les articles â†’</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}


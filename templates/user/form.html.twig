{% extends "baseAdmin.html.twig" %}

{% block title %}créer utilisateur{% endblock %}

{% block body %}
    {{ form_start(userForm) }}
    <div class="row offset-md-3">
        <div class="col-md-4">
             {{ form_row(userForm.firstName) }} {{ form_row(userForm.lastName) }} {{ form_row(userForm.phone) }}
        </div>
        <div class="col-md-4">
            {{ form_row(userForm.email) }}{{ form_row(userForm.plainPassword) }}
        </div>
        <div class="col-md-8">
            {{ form_row(userForm.roles) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-end my-3">
            <a href="{{ path('admin_blogs') }}" class="btn btn-outline-danger me-3">Annuler</a>
            <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'user_create' ? 'Créer' : 'Modifier' }}</button>
        </div>
    </div>
    {{ form_end(userForm) }}

{% endblock %}

{% extends 'baseAdmin.html.twig' %}

{% block title %}{{ app.request.attributes.get('_route') == 'product_create' ? 'Création' : 'Modification' }} Blog{% endblock %}

{% block body %}
    
    <h1 class="mb-5">
        {# {% if app.request.attributes.get('_route') == 'product_create' %}
            Créer
        {% else %}
            Modifier
        {% endif %} 
        un produit #}
        {{ app.request.attributes.get('_route') == 'product_create' ? 'Créer' : 'Modifier' }} un blog
    </h1>

    {{ form_start(blogForm) }}

        <div class="row">
            <div class="col-3">
                {# {{ form_row(blogForm.name) }} #}
                {{ form_label(blogForm.title, 'Titre') }} {# label #}
                {{ form_errors(blogForm.title) }} {# messages d'erreur #}
                {{ form_widget(blogForm.title, {
                    'attr': {
                        'placeholder': 'Ex.: Rendez-vous lundi !'
                    }
                }) }} {# l'input #}
                {{ form_help(blogForm.title) }} {# message d'aide #}
            </div>
            <div class="col-3">
                {{ form_row(blogForm.img, {
                    'label': 'Image principale (obligatoire)'
                }) }}
            </div>
            <div class="col-3">
                {{ form_row(blogForm.alt, {
                    'label': 'Texte alternatif image principale'
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                {{ form_row(blogForm.abstract, {
                    'label': 'Résumé',
                    'attr': {
                        'placeholder': 'Ex.: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident et quod. Vero aliquid praesentium earum eos, facilis doloremque tempora ab quidem incidunt ! Ea, dignissimos. Quas sed modi sapiente dolorem ?'
                    }
                }) }}
            </div>
            <div class="col-6">
                {{ form_row(blogForm.description, {
                    'label': 'Description',
                    'attr': {
                        'placeholder': 'Ex.: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident et quod. Vero aliquid praesentium earum eos, facilis doloremque tempora ab quidem incidunt ! Ea, dignissimos. Quas sed modi sapiente dolorem ?'
                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-end my-3">
                <a href="{{ path('admin_blogs') }}" class="btn btn-outline-danger me-3">Annuler</a>
                <button class="btn btn-success">{{ app.request.attributes.get('_route') == 'blog_create' ? 'Créer' : 'Modifier' }}</button>
            </div>
        </div>

    {{ form_end(blogForm) }}

{% endblock %}

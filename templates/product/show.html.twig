{% extends 'base.html.twig' %}

{% block description %}{{ product.abstract|u.truncate(157, '...') }}{% endblock %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    
    <div class="container py-5">

        <div class="row my-5">

            <div class="col-4 offset-1">
                <div class="row mb-4">
                    <div class="col-12">
                        <img src="{{ asset('img/product/' ~ product.img1) }}" alt="{{ product.alt1 }}" class="w-100">
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <img src="{{ asset('img/product/' ~ product.img1) }}" alt="{{ product.alt1 }}" class="w-100">
                    </div>
                    {% if product.img2 %}
                        <div class="col-4">
                            <img src="{{ asset('img/product/' ~ product.img2) }}" alt="{{ product.alt2 }}" class="w-100">
                        </div>
                    {% endif %}
                    {% if product.img3 %}
                        <div class="col-4">
                            <img src="{{ asset('img/product/' ~ product.img3) }}" alt="{{ product.alt3 }}" class="w-100">
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="col-5 offset-1">
                <h1 class="text-center">{{ product.title }}</h1>
                <hr class="text-secondary my-4">
                <p class="fs-3">
                    {{ product.price|number_format(2, ',', ' ') }} €
                    {% if product.quantity != 0 %}
                        <span class="fs-4 text-success">En stock</span>
                    {% else %}
                        <span class="fs-4 text-danger">Rupture de stock</span>
                    {% endif %}
                </p>
                <p>{{ product.abstract }}</p>
                <hr class="text-secondary my-4">
                    <p>Auteur : {{ product.author }}</p>
                    <p>Thème : {{ product.category.name }}</p>
                <hr class="text-secondary my-4">
                <p class="text-end">
                    <a href="#extraits" class="btn btn-secondary">Lire l'extrait</a>
                    <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-{{ product.quantity > 0 ? 'success' : 'danger disabled' }}">Ajouter au panier</a>
                </p>
            </div>

        </div>

        <div class="row my-5">
            <div class="col-10 offset-1">
                <h2 class="mb-3">Description</h2>
                {{ product.description }}
            </div>
        </div>

    </div>

{% endblock %}
